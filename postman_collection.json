{
  "info": {
    "name": "Java Microservice K8s API",
    "description": "Collection for testing the Java Microservice K8s API with authentication, TODOs CRUD operations, health checks and H2 database persistence",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "1"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "value",
        "value": "my-super-secret-api-key-2024",
        "type": "string"
      },
      {
        "key": "key",
        "value": "X-API-Key",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "todoId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "General",
      "item": [
        {
          "name": "Health Check (Public)",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            },
            "description": "Public health check endpoint - no authentication required"
          }
        },
        {
          "name": "Hello (Authenticated)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/hello",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hello"]
            },
            "description": "Authenticated hello endpoint - requires X-API-Key header"
          }
        }
      ]
    },
    {
      "name": "Todos",
      "item": [
        {
          "name": "Get All Todos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/todos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos"]
            },
            "description": "Retrieve all TODO items"
          }
        },
        {
          "name": "Get All Todos (Completed Only)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/todos?completed=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos"],
              "query": [
                {
                  "key": "completed",
                  "value": "true"
                }
              ]
            },
            "description": "Retrieve only completed TODO items"
          }
        },
        {
          "name": "Get Todo by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/todos/{{todoId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos", "{{todoId}}"]
            },
            "description": "Retrieve a specific TODO item by its ID"
          }
        },
        {
          "name": "Create Todo",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('todoId', jsonData.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Learn Kubernetes\",\n  \"description\": \"Deploy microservices to K8s cluster\",\n  \"completed\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/todos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos"]
            },
            "description": "Create a new TODO item"
          }
        },
        {
          "name": "Update Todo",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Learn Kubernetes Advanced\",\n  \"description\": \"Deploy microservices with secrets and volumes\",\n  \"completed\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/todos/{{todoId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos", "{{todoId}}"]
            },
            "description": "Update an existing TODO item"
          }
        },
        {
          "name": "Mark Todo as Completed",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/todos/{{todoId}}/complete",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos", "{{todoId}}", "complete"]
            },
            "description": "Mark a TODO item as completed"
          }
        },
        {
          "name": "Delete Todo",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/todos/{{todoId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos", "{{todoId}}"]
            },
            "description": "Delete a TODO item"
          }
        }
      ]
    },
    {
      "name": "Swagger UI",
      "item": [
        {
          "name": "Open API Docs JSON",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api-docs",
              "host": ["{{baseUrl}}"],
              "path": ["api-docs"]
            },
            "description": "Get OpenAPI specification in JSON format"
          }
        }
      ]
    }
  ]
}
